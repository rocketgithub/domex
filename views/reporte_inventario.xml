<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="domex_reporte_inventario" inherit_id="l10n_gt_extra.reporte_inventario">
        <xpath expr="//div[@class='header']" position="replace">
            <div style="text-align: right;" class="header">
                Folio: <span t-esc="data['folio_inicial']"></span>
            </div>
        </xpath>
        
        <xpath expr="//table" position="after">
            <div style="text-align: right;">
                <h4><b>Total Activo y Capital: <span t-esc="total_pasivo + total_capital" t-options="{'widget': 'monetary', 'display_currency': user.company_id.currency_id}"/></b></h4>
            </div>
        </xpath>
    </template>
</odoo>